#include <stdio.h>
#include <unistd.h>
#include <windows.h>


int main() {

    char a = 0;

    printf("bir harf girin: ");
    scanf (" %c",&a);

    int b = 0, c = 0, d = 1, e = 1, count = 0;

    int satir = 30;

    while (1) {
        for (int i = 0; i < c; i++) printf(" ");
        printf("%c\n",a);
        _sleep(10);

        b += d;
        c += e;
        count++;

        if (count % satir == 0) e *= -1;

        if (c < 0) c = 0;
        if (c > 40) c = 40;
    }

}
